<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<window>
	<defaultcontrol>9000</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<texture border="40">background-panel.png</texture>
			</control>
			<!-- ** Required ** Do not change <id> or <type> -->

			<control type="image">
				<description>page header tab icon</description>
				<posx>20</posx>
				<posy>20</posy>
				<width>234</width>
				<height>80</height>
				<texture>enigma_logo.png</texture>

			</control>
			
			<control type="image" id="5555">
				<description>Search image</description>
				<posx>1100</posx>
				<posy>30</posy>
				<width>70</width>
				<height>50</height>
				<visible>true</visible>
				<fadetime>200</fadetime>
				<texture>search_icon.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			
			<control type="fixedlist" id="9000">
				<left>-300</left>
				<top>500</top>
				<width>1900</width>
				<height>100</height>
				<onleft>900</onleft>
				<onright>9000</onright>
				<ondown>9000</ondown>
				<visible>true</visible>
				<pagecontrol>-</pagecontrol>
				<!--<scrolltime>300</scrolltime>-->
				<focusposition>2</focusposition>
				<movement>1</movement>
				<orientation>horizontal</orientation>
				<itemlayout height="20" width="200">
					<control type="label">
						<left>150</left>
						<top>0</top>
						<width>290</width>
						<height>30</height>
						<font>font28_title</font>
						<textcolor>white</textcolor>
						<align>left</align>
						<aligny>left</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="20" width="200">
					<control type="image">
						<left>130</left>
						<top>0</top>
						<width>100</width>
						<height>22</height>
						<texture>orange_box.png</texture>
					</control>
					<control type="label">
						<left>150</left>
						<top>0</top>
						<width>290</width>
						<height>30</height>
						<font>font28_title</font>
						<textcolor>white</textcolor>
						<align>left</align>
						<aligny>left</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>150</left>
						<top>0</top>
						<width>290</width>
						<height>30</height>
						<font>font28_title</font>
						<textcolor>white</textcolor>
						<align>left</align>
						<aligny>left</aligny>
						<label>$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(9000)</visible>
						<include>VisibleFadeEffect</include>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<label>Movies</label>
						<onclick>ActivateWindow(videofiles,plugin://script.enigma,return)</onclick>
						<icon>-</icon>
						<thumb>-</thumb>
					</item>
					<item id="2">
						<label>TV Shows</label>
						<onclick>ActivateWindow(videofiles,plugin://script.enigma,return)</onclick>
						<icon>-</icon>
						<thumb>-</thumb>
						<visible>True</visible>
					</item>
					<item id="3">
						<label>Live TV</label>
						<onclick>ActivateWindow(videofiles,plugin://script.enigma,return)</onclick>
						<icon>-</icon>
						<thumb>-</thumb>
						<visible>True</visible>
					</item>
					<item id="4">
						<label>Playlist</label>
						<onclick>ActivateWindow(videofiles,plugin://script.enigma,return)</onclick>
						<visible>True</visible>
						<icon>-</icon>
						<thumb>-</thumb>
					</item>
					<item id="5">
						<label>Music</label>
						<onclick>ActivateWindow(videofiles,plugin://script.enigma,return)</onclick>
						<icon>-</icon>
						<thumb>-</thumb>
						<visible>True</visible>
					</item>
					<item id="6">
						<label>subscriptions</label>
						<onclick>ActivateWindow(videofiles,plugin://script.enigma,return)</onclick>
						<icon>-</icon>
						<thumb>-</thumb>
						<visible>True</visible>
					</item>
					<item id="7">
						<label>Favorites</label>
						<onclick>ActivateWindow(videofiles,plugin://script.enigma,return)</onclick>
						<icon>-</icon>
						<thumb>-</thumb>
						<visible>True</visible>
					</item>
				</content>
			</control>
			
		</control>
	</controls>
</window>
